@inject IDialogService DialogService
<MudDialog>
    <DialogContent>
        <EditForm Model="Category" OnValidSubmit="(async () => await CreateCategory(Category))">
            <DataAnnotationsValidator />
            <MudCard Elevation="0">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudGrid>
                            <MudItem Class="py-8 d-flex flex-1">
                                <MudText Typo="Typo.body1">
                                    Dodavanje kategorije
                                </MudText>
                            </MudItem>
                        </MudGrid>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudTextField @bind-Value="@Category.Naziv_Kategorije"
                                  For="@(() => Category.Naziv_Kategorije)"
                                  Label="Naziv Kategorije"
                                  Immediate="true"
                                  Required="true"
                                  Counter="55"
                                  MaxLength="55" />
                    <MudText Align="Align.Left" Color="Color.Error">@ValidationMessage</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Cancel" Size="Size.Small">Nazad</MudButton>
                    <MudButton Class="ml-auto" ButtonType="ButtonType.Submit" Color="Color.Success" Variant="Variant.Filled" Size="Size.Small">Kreiraj</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </DialogContent>
</MudDialog>
