<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem Class="py-8 d-flex flex-1">
                <MudText Typo="Typo.h5">@Prijava.Naziv_Prijave</MudText>
            </MudItem>
            <MudItem Class="py-8 d-flex" Style="align-items:flex-end">
                <MudText>
                    <MudAvatar Size="Size.Small" Style="background-color:#dc3545" >@Prijava.k_ins.Substring(0,1)</MudAvatar>
                    @Prijava.k_ins
                </MudText>
            </MudItem>
        </MudGrid>
        <MudText Typo="Typo.h5" Align="Align.Center">Opis prijave</MudText>
        <MudDivider />
        <MudText Typo="Typo.body2" GutterBottom="true">@Prijava.Opis_Prijave</MudText>
        <MudDivider />
        <MudGrid>
            <MudItem xs="3">
                <MudTextField Label="Datum Unosa" @bind-Value="DatumUnosa" ReadOnly="true" Variant="Variant.Text" Adornment="Adornment.Start" AdornmentIcon="@Icons.Filled.CalendarMonth" />
            </MudItem>
            <MudItem xs="3">
                <MudTextField Label="Datum Izmene" @bind-Value="DatumIzmene" ReadOnly="true" Variant="Variant.Text" Adornment="Adornment.Start" AdornmentIcon="@Icons.Filled.CalendarMonth" />
            </MudItem>
        </MudGrid>
        <MudGrid>

            <MudItem xs="9">
                <MudList Dense="true">
                    @if (FileNames.Count < 1)
                    {
                        <MudListSubheader>
                            Trenutno nema file-ova za ovu prijavu
                        </MudListSubheader>
                    }
                    else
                    {
                        <MudListSubheader>
                            Lista fajlova:
                        </MudListSubheader>
                        @foreach (var name in FileNames)
                        {
                            <MudListItem Text="@name" Icon="@Icons.Filled.AttachFile" IconColor="Color.Info" />
                        }
                    }
                </MudList>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
