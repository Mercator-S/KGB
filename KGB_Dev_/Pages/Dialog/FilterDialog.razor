@inject IDialogService DialogService
<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem Class="py-8 d-flex flex-1">
                <MudText Typo="Typo.body1">
                    Filter
                </MudText>
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem xs="6" sm="6">
                <MudSelect ValueChanged="@(async (int s) => await GetSubcategory(s))" Label="Kategorija KGB prijave" For="@(()=>Model.Fk_Category)" AnchorOrigin="Origin.BottomCenter" Style="margin-top:20px;">
                    @foreach (KeyValuePair<int, string> a in DictionaryCategory)
                    {
                        <MudSelectItem T="int" Value="a.Key">@a.Value</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="6" sm="6">
                <MudSelect T="int" Label="Potkategorija KGB prijave" @bind-Value="Model.Fk_Subcategory" For="@(()=>Model.Fk_Subcategory)" AnchorOrigin="Origin.BottomCenter" Style="margin-top:20px;">
                    @foreach (KeyValuePair<int, string> a in DictionarySubcategory)
                    {
                        <MudSelectItem T="int" Value="a.Key">@a.Value</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem xs="6" sm="6">
                <MudDateRangePicker Elevation="12" Label="Datum unosa prijave" @bind-DateRange="_dateRange" />
            </MudItem>
            <MudItem xs="6" sm="6">
                <MudSelect T="string" @bind-Value="Model.User" Label="Korisnik" For="@(()=>Model.User)" AnchorOrigin="Origin.BottomCenter">
                    @foreach (KeyValuePair<string, string> a in Users)
                    {
                        <MudSelectItem T="string" Value="a.Key">
                            <MudAvatar Style="background-color:#dc3545" Size="Size.Small">@a.Value.Substring(0,1)</MudAvatar>
                            @a.Value
                        </MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem xs="6" sm="6">
                <MudDateRangePicker Elevation="12" Label="Datum izmene prijave" @bind-DateRange="_dateRange" />
            </MudItem>
            <MudItem Class="d-flex align-end" xs="6" sm="6">
                <MudSwitch UnCheckedColor="Color.Error" @bind-Checked="@Basic_Switch1" Label="Sa fajlom" Color="Color.Success" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
