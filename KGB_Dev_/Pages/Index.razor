@inject IDialogService DialogService
@page "/"
@using KGB_Dev_.Data.KGB_Model
@using static System.Net.WebRequestMethods

<PageTitle>KGB List</PageTitle>


<MudGrid>
</MudGrid>
<MudGrid Class="d-flex align-center justify-center">
    <MudItem xs="9">
        <MudTable Items="@ListOfKGB" Dense="true" Hover="true" Striped="true" Filter="new Func<KGB_Knowledge,bool>(SearchTable1)">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Interna lista</MudText>
                <MudSpacer />
                <MudItem Class="justify-center" xs="7">
                    <MudTextField @bind-Value="searchString1" Immediate="true" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
                </MudItem>
                <MudSpacer />
                <MudButton OnClick="@(async () => await FilterDialog())" Class="align-self-center" Variant="Variant.Text" IconColor="Color.Info" Size="Size.Small" StartIcon="@Icons.Filled.FilterAlt">Filter</MudButton>
            </ToolBarContent>
            <HeaderContent>
                <MudTh Style="color:white;background-color:#dc3545">Naziv prijave</MudTh>
                <MudTh Style="color:white;background-color:#dc3545"><MudTableSortLabel SortBy="new Func<KGB_Knowledge, object>(x=>x.d_ins)">Datum unosa</MudTableSortLabel></MudTh>
                <MudTh Style="color:white;background-color:#dc3545">Korisnik</MudTh>
                <MudTh Style="color:white;background-color:#dc3545"></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Naziv prijave">
                    @if (context.Naziv_Prijave.Length >= 20)
                    {
                        <MudTooltip Text="@context.Naziv_Prijave" Delay="800" Duration="1000" Placement="Placement.Bottom" Arrow="true">
                            @context.Naziv_Prijave.Substring(0,20)
                        </MudTooltip>
                    }
                    else
                    {
                        @context.Naziv_Prijave
                    }
                </MudTd>
                <MudTd DataLabel="Datum unosa">

                    @context.d_ins.ToString("dd/MM/yyyy")
                </MudTd>
                <MudTd DataLabel="Korisnik">@context.k_ins</MudTd>
                <MudTd>
                    <MudTooltip Text="Detalji prijave" Delay="800" Duration="1000" Placement="Placement.Bottom" Arrow="true">
                        <MudIconButton OnClick="@(() => ShowTableDetailsDialog(context.Id))" Icon="@Icons.Filled.MoreHoriz" Color="@Color.Success"></MudIconButton>
                    </MudTooltip>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager HorizontalAlignment="HorizontalAlignment.Center" />
            </PagerContent>
        </MudTable>

    </MudItem>
</MudGrid>
