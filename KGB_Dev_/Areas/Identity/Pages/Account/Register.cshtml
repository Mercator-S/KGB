@page "/register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/Card.css" />
</head>
<body>
    <div class="containerForCard">
        <div class="row">
            <div class="card">
                <h1>Registracija novog naloga</h1>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Ime" class="form-label"></label>
                        <input asp-for="Input.Ime" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Ime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Prezime" class="form-label">Prezime</label>
                        <input asp-for="Input.Prezime" class="form-control" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Prezime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <select class="form-control" asp-for="Input.Naziv_Oj"
                                asp-items="@(new SelectList(Model.ListOfOrg.Values))" aria-required="true">
                            <option value="">Izaberite naziv org. jedinice</option>
                        </select>
                        <span asp-validation-for="Input.Naziv_Oj" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <select class="form-control" asp-for="Input.Naziv_Role"
                                asp-items="@(new SelectList(Model.ListOfRola.Values))" aria-required="true">
                            <option value="">Izaberite tip naloga</option>
                        </select>
                        <span asp-validation-for="Input.Naziv_Role" class="text-danger"></span>
                    </div>
                    <hr />
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}